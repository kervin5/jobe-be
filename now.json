{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@now/node@canary",
      "config": {
        "maxLambdaSize": "25mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "dest": "src/server.ts"
    }
  ],
  "env": {
    "AWS_SES_AccessKey": "@aws-ses-accesskey",
    "AWS_SES_SecretKey": "@aws-ses-accesssecret",
    "DATABASE_URL": "@database-url"
  },
  "build": {
    "env": {
      "AWS_SES_AccessKey": "@aws-ses-accesskey",
      "AWS_SES_SecretKey": "@aws-ses-accesssecret",
      "DATABASE_URL": "@database-url"
    }
  }
}
